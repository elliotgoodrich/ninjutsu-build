    "@ninjutsu-build/bun": "^0.1.0",
    "@ninjutsu-build/core": "^0.8.7",
    "@ninjutsu-build/node": "^0.9.1",
    "@ninjutsu-build/tsc": "^0.11.1",
    "@swc/cli": "^0.3.10",
    "@swc/core": "^1.4.11",
    "@types/toposort": "^2.0.7",
    "glob": "^10.3.10",
