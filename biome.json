{
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "crlf",
    "ignore": []
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useTemplate": "off",
        "noParameterAssign": "off",
        "noUselessElse": "off"
      }
    }
  }
}