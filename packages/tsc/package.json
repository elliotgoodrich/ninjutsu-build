{
  "name": "@ninjutsu-build/tsc",
  "version": "0.2.0",
  "description": "Create a ninjutsu-build rule for running the TypeScript compiler (tsc)",
  "author": "Elliot Goodrich",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "dist",
  "scripts": {
    "build": "npx tsc",
    "format": "npx prettier package.json tsconfig.json src --write",
    "lint": "npx eslint src"
  },
  "keywords": [
    "ninjutsu",
    "ninjutsu-build",
    "ninja",
    "ninja-build",
    "build",
    "tsc",
    "typescript"
  ],
  "license": "MIT",
  "files": [
    "dist/index.js",
    "dist/index.d.ts",
    "dist/makeDyndeps.mjs",
    "dist/parseTSC.mjs"
  ],
  "prettier": {
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {}
  },
  "dependencies": {
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "@ninjutsu-build/core": "^0.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3"
  }
}
