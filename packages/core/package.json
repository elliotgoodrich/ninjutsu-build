{
  "name": "@ninjutsu-build/core",
  "version": "0.0.1",
  "description": "A TypeScript library for creating ninja files (https://ninja-build.org/)",
  "author": "Elliot Goodrich",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "dist",
  "scripts": {
    "build": "npx tsc",
    "format": "npx prettier package.json tsconfig.json src --write",
    "lint": "npx eslint src",
    "docs": "typedoc --plugin typedoc-plugin-markdown --out docs src/index.ts"
  },
  "keywords": [
    "ninja",
    "ninja-build",
    "build"
  ],
  "license": "MIT",
  "files": [
    "dist/index.js",
    "dist/index.d.ts"
  ],
  "prettier": {
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {}
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3",
    "typedoc": "^0.25.2",
    "typedoc-plugin-markdown": "^3.16.0",
    "typescript": "^5.2.2"
  }
}
