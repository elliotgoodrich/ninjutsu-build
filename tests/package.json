{
  "name": "ninjutsu-build-tests",
  "version": "0.0.1",
  "description": "Test suite for @ninjutsu-build/*",
  "scripts": {
    "build": "npx tsc",
    "test": "npx tsc && npx jest dist",
    "format": "npx prettier package.json tsconfig.json src --write",
    "lint": "npx eslint src"
  },
  "author": "Elliot Goodrich",
  "license": "MIT",
  "devDependencies": {
    "@ninjutsu-build/core": "file:../packages/core",
    "@ninjutsu-build/node": "file:../packages/node",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "tsafe": "^1.6.5",
    "typescript": "^5.2.2"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {}
  }
}
